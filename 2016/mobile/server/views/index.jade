extends layout

block content
    h1= title
    
    | #[a#refresh(href="#") Refresh]

    // Wrapper
    .wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Id:
                |  <span id='userInfoId'></span>
                br
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Email:
                |  <span id='userInfoEmail'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th Username
                    th Email
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='name')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                button#btnAddUser Add User
        // /ADD USER

    // /WRAPPER
    
    | **

    // Wrapper
    .wrapper
    
        // USER INFO
        #messageInfo
            h2 Message Info
            div
                strong Id:
                |  <span id='messageInfoId'></span>
                br
                strong Username:
                |  <span id='messageInfoUserName'></span>
                br
                br
                strong Message Text:
                |  <span id='messageInfoText'></span>
                br
                br
                strong Message Image:
                br
                |  <span id='messageInfoImage'></span>
        // /USER INFO

        #messageList
            h2 Message List
        
            | #[a#clear(href="#") Delete All]
        
            table
                thead
                    th Username
                    th Message Text
                    th Message Image
                    th Delete?
                tbody


    // /WRAPPER
