<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_info"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="bottom"
    android:layout_weight="7"
    android:orientation="vertical"
    android:transitionName="section_info"
    tools:layout_height="300dp">

    <ImageView
        android:id="@+id/img_app_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/home_info_middle_margin"
        android:layout_marginTop="@dimen/home_info_top_margin"
        android:layout_weight="1"
        android:src="@drawable/img_logo" />

    <ImageView
        android:id="@+id/img_app_title"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/home_info_bottom_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/img_title" />

</LinearLayout>
